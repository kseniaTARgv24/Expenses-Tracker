<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Expenses_Tracker.ViewModels"
             xmlns:models="clr-namespace:Expenses_Tracker.Models"
             x:Class="Expenses_Tracker.Views.AddTransactionPage"
             Title="Add Transaction">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">

            <Entry x:Name="AmountEntry" Placeholder="Amount" Keyboard="Numeric" Text="{Binding Amount, Mode=TwoWay}"/>
            <Label Text="Date:" FontAttributes="Bold" />
            <DatePicker Date="{Binding Date}" />
            <Picker Title="Type"
                ItemsSource="{Binding TransactionTypes}"
                SelectedItem="{Binding Type, Mode=TwoWay}" />

            <Picker Title="Category"
                ItemsSource="{Binding Categories}"
                SelectedItem="{Binding SelectedCategory}"
                ItemDisplayBinding="{Binding Name}"
                IsVisible="{Binding IsExpense}" />

            <Editor x:Name="NoteEditor" Placeholder="Note (optional)" />

            <Button Text="Save" Command="{Binding SaveTransactionCommand}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
