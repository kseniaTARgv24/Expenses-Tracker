<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Expenses_Tracker.Views.AddCategoryPage"
             Title="Add Category">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Add New Category"
               FontSize="24"
               HorizontalOptions="Center" />

        <Entry Placeholder="Category Name"
               Text="{Binding Name}" />

        <Entry Placeholder="Icon (optional)"
               Text="{Binding Icon}" />

        <Button Text="Save"
                Command="{Binding SaveCategoryCommand}" />

        <CollectionView ItemsSource="{Binding Categories}"
                        HeightRequest="200">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BorderColor="LightGray">
                        <HorizontalStackLayout>
                            <Label Text="{Binding Icon}" FontSize="18"/>
                            <Label Text="{Binding Name}" FontSize="18" Margin="10,0,0,0"/>
                        </HorizontalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
