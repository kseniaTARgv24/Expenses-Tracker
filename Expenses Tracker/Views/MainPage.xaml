<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Expenses_Tracker.ViewModels"
             xmlns:models="clr-namespace:Expenses_Tracker.Models"
             xmlns:helpers="clr-namespace:Expenses_Tracker.Helpers"
             x:Class="Expenses_Tracker.Views.MainPage"
             x:DataType="vm:MainViewModel"
             Title="{helpers:Translate Text=Expenses_Tracker}"
             x:Name="ThisPage"
             >

    <Grid Padding="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0"
               Text="{Binding CurrentMonth}"
               FontAttributes="Bold"
               FontSize="28"
               HorizontalOptions="Center"
               Margin="0,0,0,8"
               TextColor="#333" />

        <HorizontalStackLayout Grid.Row="1"
                               HorizontalOptions="Center"
                               Spacing="32"
                               Margin="0,0,0,16">

            <VerticalStackLayout>
                <Label Text="{helpers:Translate Text=Total_Income}"
                    FontSize="14"
                       HorizontalOptions="Center"
                       TextColor="#2E7D32" />
                <Label Text="{Binding TotalIncomeFormatted}"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="Green"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Label Text="{helpers:Translate Text=Total_Expenses}"
                       FontSize="16"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="#B71C1C" />
                <Label Text="{Binding TotalExpenseFormatted}"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="Red"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>

        </HorizontalStackLayout>

        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding Transactions}"
                        VerticalScrollBarVisibility="Always"
                        Margin="0,0,0,12">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vm:TransactionViewItem">
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems>
                                <SwipeItem Text="{helpers:Translate Text=Delete}"
                                           BackgroundColor="Red"
                                           Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainViewModel}}, Path=DeleteCommand}"
                                           CommandParameter="{Binding Transaction}" />
                            </SwipeItems>
                        </SwipeView.RightItems>

                        <SwipeView.LeftItems>
                            <SwipeItems>
                                <SwipeItem Text="{helpers:Translate Text=Details}"
                                           BackgroundColor="LightBlue"
                                           Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainViewModel}}, Path=ShowDetailsCommand}"
                                           CommandParameter="{Binding Transaction}" />
                            </SwipeItems>
                        </SwipeView.LeftItems>

                        <Grid Padding="8" ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center">
                            <Label Grid.Column="0"
                                   Text="{Binding Date, StringFormat='{0:dd.MM.yyyy}'}"
                                   FontSize="14"
                                   HorizontalOptions="Start" />

                            <Label Grid.Column="1"
                                   Text="{Binding CategoryDisplay}"
                                   FontSize="14"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center" />

                            <Label Grid.Column="2"
                                   Text="{Binding AmountText, StringFormat='{}{0:C}'}"
                                   FontAttributes="Bold"
                                   TextColor="{Binding AmountColor}"
                                   HorizontalOptions="End" />
                        </Grid>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <HorizontalStackLayout Grid.Row="3"
                               Spacing="12"
                               Padding="0,12,0,0"
                               HorizontalOptions="Center">
            <Button Text="{helpers:Translate Text=Add_Transaction}" Clicked="OnAddClicked" />
            <Button Text="{helpers:Translate Text=Add_Category}" Clicked="OnAddCatClicked" />
        </HorizontalStackLayout>

    </Grid>
</ContentPage>
