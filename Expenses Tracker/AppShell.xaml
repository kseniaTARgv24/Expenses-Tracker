<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Expenses_Tracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Expenses_Tracker.Views"
    Shell.FlyoutBehavior="Flyout"
    xmlns:helpers="clr-namespace:Expenses_Tracker.Helpers"
    Title="Expenses_Tracker">

    <FlyoutItem Title="{helpers:Translate Text=Main}" Icon="settings.png">
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    </FlyoutItem>

    <FlyoutItem Title="{helpers:Translate Text=Settings}" Icon="settings.png">
        <ShellContent ContentTemplate="{DataTemplate local:SettingsPage}" />
    </FlyoutItem>



</Shell>
